PROGRAM circle
	!This program calculates 
	the equation of a circle
	!Variable declarations
	REAL :: x1, y1, x2, y2, 2x3, y3, a, b, r	
	CHAR :: str1, str2
	INTEGER:: x,y,z
	!Read data
	r = 5
	
	PRINT *, "Please type the coordinates of three points"
	READ*, x1, y1, x2, y2, x3, y3
	! Calculate the parameters (a,b,r) of the circle
	IF (r == 5)
	a = (2 * 3.14) * r * r
	b = -2.1234
	str1 = str2 // str1
	!Display the results
	PRINT *, "The center of the circle through these points is" , a, b, c
	IF ( r < 5)
	  c = 0
	  a = 1.5
	  b = -1
	END IF		
	PRINT *, "Its radius is ", r
END PROGRAM circle
